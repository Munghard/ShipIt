.truncate {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.assign-worker {
    border-color: green;
}
.assign-worker:hover {
    border-color: chartreuse;
}
.assign-worker-untrained {
    border-color: var(--yellow);
}
.assign-worker-untrained:hover {
    border-color: yellow;
}

.un-assign-worker {
    border-color: red;
}
.un-assign-worker:hover {
    border-color: pink;
}

.content {
    background-color: var(--content);
    border-color: var(--header);
    border-width: 4;
    border-radius: 16;
    margin: 16;
    padding: 16;
}

.content:hover {
    border-color: var(--border);
}

.message-box {
    flex-grow: 1;
    opacity: 0.5;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
    border-bottom-left-radius: 16px;
    height: 20%;
    align-content: flex-end;
    justify-content: flex-start;
    flex-direction: column;
    margin-top: 16px;
    margin-right: 16px;
    margin-bottom: 16px;
    margin-left: 16px;
    width: auto;
    max-height: 300px;
}
.container {
    padding:16px;
    flex-grow: 0;
    flex-shrink: 1;
    opacity: 0.5;
    background-color:var(--window);
    border-color:var(--border);
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
    border-bottom-left-radius: 16px;
    border-width:4px;
    align-content: flex-start;
    justify-content: flex-start;
    flex-direction: column;
    margin-top: 16px;
    margin-right: 16px;
    margin-bottom: 16px;
    margin-left: 16px;
    width: auto;
    height:auto;
}

#unity-low-button{
    background-color: var(--header);
    border-radius: 8px 8px  0 0 ;
    border-width: 4px;
    border-color: var(--border);
}
#unity-high-button{
    background-color: var(--header);
    border-radius: 0 0 8px 8px;
    border-width: 4px;
    border-color: var(--border);
}
.unity-base-slider__dragger{
    background-color: var(--primary);
    border-radius: 8px;
    border-width: 4px;
    border-color: var(--border);
}
.unity-base-slider__tracker{
    background-color: var(--window);
}
.TextPop{
    -unity-font-definition: url("project://database/Assets/Resources/fonts/BubblegumSDF.asset") 
}
